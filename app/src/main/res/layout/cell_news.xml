    <TextView
        android:id="@+id/id_news_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_list_title"
        android:lines="1"
        android:layout_marginRight="@dimen/img_margin"
        android:layout_alignTop="@id/id_news_list_img"
        android:layout_marginTop="13dp"
        android:textSize="16sp"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/id_news_list_img" />
    <TextView
        android:id="@+id/id_news_list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_list_description"
        android:layout_marginRight="@dimen/img_margin"
        android:paddingTop="5dp"
        android:textColor="@color/gray_bc_bg_color"
        android:textSize="12sp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_below="@id/id_news_list_title"
        android:layout_alignLeft="@id/id_news_list_title"/>

</RelativeLayout>