<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/o2o_top_view"
            layout="@layout/o2o_top_view" />

        <RelativeLayout
            android:id="@+id/o2o_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/o2o_top_view"
            android:gravity="center_horizontal"
            android:padding="10dp">

            <cn.magicwindow.MWImageView
                android:id="@+id/o2o_img_1"
                android:layout_width="160dp"
                android:layout_height="225dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/o2o_img_1"
                android:layout_alignTop="@id/o2o_img_1"
                android:layout_toRightOf="@id/o2o_img_1"
                android:orientation="vertical">

                <cn.magicwindow.MWImageView
                    android:id="@+id/o2o_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@color/white" />

                <cn.magicwindow.MWImageView
                    android:id="@+id/o2o_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@color/white" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
